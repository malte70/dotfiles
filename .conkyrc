alignment top_left
background yes
border_width 0
default_color aaaaaa
double_buffer yes
draw_borders no
draw_outline no
draw_shades no
gap_x 5
gap_y 35 
maximum_width 250
minimum_size 450 10
own_window yes
own_window_transparent yes
own_window_type desktop
own_window_hints undecorated,below,sticky,skip_taskbar,skip_pager
own_window_argb_visual yes
own_window_argb_value 100
update_interval 2.0
uppercase no

use_xft yes
xftalpha 0.8
xftfont FreeSerif:size=11

TEXT
Mount:${alignr}Belegt:
 /$alignr${fs_used /} [${fs_used_perc /}%]
 /boot$alignr${fs_used /boot} [${fs_used_perc /boot}%]
 /home $alignr${fs_used /home} [${fs_used_perc /home}%]
 /mnt/musik $alignr${fs_used /mnt/musik} [${fs_used_perc /mnt/musik}%]
 /srv $alignr${fs_used /srv} [${fs_used_perc /srv}%]
 /usr $alignr${fs_used /usr} [${fs_used_perc /usr}%]
 /var $alignr${fs_used /var} [${fs_used_perc /var}%]
 libvirt-HDDs $alignr${fs_used /var/lib/libvirt/images} [${fs_used_perc /var/lib/libvirt/images}%]
 ${if_mounted /mnt/windows}Windows (C:) $alignr${fs_used /mnt/windows} [${fs_used_perc /mnt/windows}%]$endif
 ${if_mounted /media/dvd}DVD $alignr${fs_used /media/dvd} [${fs_used_perc /media/dvd}%]$endif

