alignment top_left
background yes
border_width 0
default_color 0054ce
double_buffer yes
draw_borders no
draw_outline no
draw_shades no
gap_x 5
gap_y 35 
maximum_width 200
minimum_size 400 10
own_window yes
own_window_transparent yes
own_window_type desktop
own_window_hints undecorated,below,sticky,skip_taskbar,skip_pager
own_window_argb_visual yes
own_window_argb_value 100
update_interval 2.0
uppercase no

use_xft yes
xftalpha 0.8
xftfont FreeSerif:size=11

